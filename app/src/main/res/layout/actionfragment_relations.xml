<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/backblue"
    android:layout_height="match_parent"
    tools:context=".ActionRelationsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/heximage">


            <RelativeLayout
                android:id="@+id/status0"
                android:layout_width="match_parent"
                android:background="@drawable/layout_bg"
                android:layout_height="200dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rel0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/p0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="ROMANCE"/>

                    <TextView
                        android:id="@+id/p0.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Current"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@id/rel0"
                    android:background="@android:color/holo_orange_dark"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_below="@id/rel0"
                    >
                    <TextView
                        android:id="@+id/statusinfo0_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="Name: Meera."/>

                    <TextView
                        android:id="@+id/statusinfo0_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/statusinfo0_title"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="4 yeaers completed."/>

                    <Button
                        android:id="@+id/WO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="END ROMANCE"
                        android:background="@drawable/buttonstyle"
                        android:textColor="@color/white"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/statusinfo0_subtitle"/>

                    <Button
                        android:id="@+id/AFAR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TRY FOR A CHILD"
                        android:background="@drawable/buttonstyle"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@id/WO"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@id/statusinfo0_subtitle"/>

                    <Button
                        android:id="@+id/QJ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROPOSE MARRAIGE"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/buttonstyle"
                        android:textColor="@color/white"
                        android:layout_below="@id/WO"/>

                </RelativeLayout>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/status1"
                android:layout_width="match_parent"
                android:background="@drawable/layout_bg"
                android:layout_below="@id/status0"
                android:layout_height="150dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/p1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="BACHELOR"/>

                    <TextView
                        android:id="@+id/p1.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Current"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@id/rel1"
                    android:background="@android:color/holo_blue_light"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_below="@id/rel1"
                    >
                    <TextView
                        android:id="@+id/statusinfo1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:text="2 years completed."/>

                    <Button
                        android:id="@+id/NewRomance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NEW ROMANCE"
                        android:background="@drawable/buttonstyle"
                        android:layout_margin="10dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_below="@id/statusinfo1_title"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/status2"
                android:layout_width="match_parent"
                android:layout_below="@id/status1"

                android:layout_height="120dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="ROMANCE"/>

                    <TextView
                        android:id="@+id/p2.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Age 19 to 24"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@id/rel2"
                    android:background="@android:color/holo_orange_dark" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_below="@id/rel2"
                    >
                    <TextView
                        android:id="@+id/statusinfo2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="Name: MEERA"/>

                    <TextView
                        android:id="@+id/maininfo2_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:layout_below="@id/statusinfo2_title"
                        android:textColor="@color/white"
                        android:text="4 years completed"/>



                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/status3"
                android:layout_width="match_parent"
                android:layout_below="@id/status2"

                android:layout_height="120dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rel3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/p3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="MARRIAGE"/>

                    <TextView
                        android:id="@+id/p2.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Age 18 to 19"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@id/rel3"
                    android:background="@android:color/holo_orange_dark" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_below="@id/rel3"
                    >
                    <TextView
                        android:id="@+id/statusinfo3_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="Name: REENA"/>

                    <TextView
                        android:id="@+id/maininfo3_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:layout_below="@id/statusinfo3_title"
                        android:textColor="@color/white"
                        android:text="1 years completed"/>



                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/status4"
                android:layout_width="match_parent"
                android:layout_below="@id/status3"

                android:layout_height="120dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:id="@+id/rel4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backblue">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:id="@+id/p4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:text="ROMANCE"/>

                    <TextView
                        android:id="@+id/p2.4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:text="Age 17 to 18"/>
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_below="@id/rel4"
                    android:background="@android:color/holo_orange_dark" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_below="@id/rel4"
                    >
                    <TextView
                        android:id="@+id/statusinfo4_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:text="Name: PAYAL"/>

                    <TextView
                        android:id="@+id/maininfo4_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:layout_below="@id/statusinfo4_title"
                        android:textColor="@color/white"
                        android:text="4 years completed"/>



                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>