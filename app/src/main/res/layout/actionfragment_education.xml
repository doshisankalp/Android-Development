<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/backblue"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActionEducationFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/heximage">

        <RelativeLayout
            android:id="@+id/status1"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg"
            android:layout_height="170dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backblue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="SCHOOL"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_below="@id/rel1"
               >
                <TextView
                    android:id="@+id/statusinfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Secondary school completed"/>

            <TextView
                android:id="@+id/maininfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/statusinfo1"
                android:textColor="@color/black"
                android:text="4/9 years completed."/>


                <ProgressBar
                    android:id="@+id/progbar1"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@id/maininfo1"
                    android:progress="100"
                    android:progressBackgroundTint="#000000"
                    android:progressTint="@android:color/holo_green_light" />


            <Button
                android:id="@+id/button_quitschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUIT SCHOOL"
                android:background="@drawable/buttonstyle"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
               />
            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/status2"
            android:layout_below="@id/status1"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg"
            android:layout_height="170dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:id="@+id/rel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backblue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="COLLEGE"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_below="@id/rel2"
                >
                <TextView
                    android:id="@+id/statusinfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Not enrolled yet."/>

                <TextView
                    android:id="@+id/maininfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/statusinfo2"
                    android:textColor="@color/black"
                   />


                <ProgressBar
                    android:id="@+id/progbar2"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@id/maininfo2"
                    android:progress="0"
                    android:progressBackgroundTint="#000000"
                    android:progressTint="@android:color/holo_green_light" />

                <Button
                    android:id="@+id/college_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENROLL"
                    android:background="@drawable/buttonstyle"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/status3"
            android:layout_below="@id/status2"
            android:layout_width="match_parent"
            android:background="@drawable/layout_bg"
            android:layout_height="170dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:id="@+id/rel3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backblue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/p3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="GRADUATE SCHOOL"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_below="@id/rel3"
                >
                <TextView
                    android:id="@+id/statusinfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Not enrolled yet."/>

                <TextView
                    android:id="@+id/maininfo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/statusinfo3"
                    android:textColor="@color/black"
                    />


                <ProgressBar
                    android:id="@+id/progbar3"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@id/maininfo3"
                    android:progress="0"
                    android:progressBackgroundTint="#000000"
                    android:progressTint="@android:color/holo_green_light" />

                <Button
                    android:id="@+id/gradualte_enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENROLL"
                    android:background="@drawable/buttonstyle"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/status4"
            android:layout_width="match_parent"

            android:layout_height="170dp"
            android:layout_marginTop="21dp"
            android:layout_below="@+id/status3"
            android:layout_alignLeft="@+id/status3"
            android:layout_alignStart="@+id/status3">

            <RelativeLayout
                android:id="@+id/rel4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backblue">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:id="@+id/p4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="VOCATIONAL SCHOOL"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_below="@id/rel4"
                >
                <TextView
                    android:id="@+id/statusinfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Not enrolled yet."/>

                <TextView
                    android:id="@+id/maininfo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/statusinfo4"
                    android:textColor="@color/black"
                    />


                <ProgressBar
                    android:id="@+id/progbar4"
                    style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_below="@id/maininfo4"
                    android:progress="0"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@android:color/holo_green_light" />



            </RelativeLayout>
        </RelativeLayout>

</RelativeLayout>
</ScrollView>
</RelativeLayout>