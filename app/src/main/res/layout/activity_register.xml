<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:contextClickable="false"
    tools:context="com.example.anuja.reall.LiveALife">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Register"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="40dp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:text="First Name"
            android:layout_below="@+id/textView5"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>
        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:layout_below="@+id/textView3"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_below="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Last Name"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/lname"
            android:layout_below="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_below="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Gender"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <RadioGroup
            android:id="@+id/radio"
            android:layout_below="@+id/textView6"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/radioButton4"
                android:layout_weight="1"
                android:text="Other"
                android:textColor="@color/colorLightBlue"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

        </RadioGroup>


        <TextView
            android:id="@+id/country1"
            android:layout_below="@+id/radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Country"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:id="@+id/spinner"
            android:layout_below="@+id/country1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#FFFFFF"
            android:textColor="@color/white"
            android:background="@drawable/layout_bgnocorners"
            android:popupBackground="@drawable/layout_bgnocorners"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/textView9"
            android:layout_below="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mobile number"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/mobile_number"
            android:layout_below="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="phone"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_below="@+id/mobile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Username"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/username"
            android:layout_below="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_below="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_below="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_below="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Confirm Password"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/conf_password"
            android:layout_below="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:backgroundTint="@android:color/holo_blue_bright"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_below="@+id/conf_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="I accept all terms and conditions"
            android:textColor="@color/colorLightBlue"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/button123"
            android:layout_below="@+id/checkBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapebtn"
            android:text="Submit"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
