<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuja.reall.ForgetPassword"
    android:background="@color/black">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="149dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/glob" />


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/rsz_rl_logo_big" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/emailID"
        android:layout_below="@+id/imageView6"
        android:layout_marginTop="81dp"
        android:layout_marginLeft="15dp"
        android:text="E-mail Id:"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/emailID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:ems="10"
        android:hint="Please enter your email id here..."
        android:inputType="textEmailAddress"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp" />

    <Button
        android:id="@+id/mybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"

        android:background="@drawable/roundshapebtn"
        android:text="SEND" />

    <ProgressBar

        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailID"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        />
</RelativeLayout>
