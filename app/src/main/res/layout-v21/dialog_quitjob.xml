<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/layout_bgnocorners">

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you really want to quit job?"
        android:textSize="20sp"
        android:textColor="#404141"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/parents_dialog_moveout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorRadioButton"
            android:text="Yes"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/parents_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_toLeftOf="@id/parents_dialog_moveout"
            android:backgroundTint="@color/colorRadioButton"
            android:padding="0dp"
            android:text="No"
            android:textColor="#ffffff"
            android:layout_marginRight="16dp" />




    </RelativeLayout>


</LinearLayout>